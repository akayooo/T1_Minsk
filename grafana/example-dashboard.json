{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "",
      "type": "datasource",
      "pluginId": "loki",
      "pluginName": "Loki"
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": false,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "type": "stat",
      "title": "Error rate (5xx) %",
      "id": 1,
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto",
        "textMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(rate(http_requests_total{status=~\"5..\", method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval])) / sum(rate(http_requests_total{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval]))",
          "legendFormat": "5xx %"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Active connections",
      "id": 2,
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "orientation": "auto",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "textMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "active_connections"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "RPS by status",
      "id": 3,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["lastNotNull"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "stacking": { "mode": "normal", "group": "A" }
          }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (status) (rate(http_requests_total{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Top endpoints by RPS",
      "id": 4,
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["lastNotNull"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "req/s",
          "custom": { "drawStyle": "line", "lineWidth": 2, "lineInterpolation": "smooth" }
        },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "topk(10, sum by (endpoint) (rate(http_requests_total{method=~\"$method\"}[$__rate_interval])))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency quantiles (s)",
      "id": 5,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "multi", "sort": "none" }
      },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        { "refId": "A", "expr": "histogram_quantile(0.5, sum by (le) (rate(http_request_duration_seconds_bucket{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval])))", "legendFormat": "p50" },
        { "refId": "B", "expr": "histogram_quantile(0.9, sum by (le) (rate(http_request_duration_seconds_bucket{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval])))", "legendFormat": "p90" },
        { "refId": "C", "expr": "histogram_quantile(0.95, sum by (le) (rate(http_request_duration_seconds_bucket{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval])))", "legendFormat": "p95" },
        { "refId": "D", "expr": "histogram_quantile(0.99, sum by (le) (rate(http_request_duration_seconds_bucket{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval])))", "legendFormat": "p99" }
      ]
    },
    {
      "type": "heatmap",
      "title": "Latency distribution (rate per bucket)",
      "id": 6,
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": { "legend": { "show": true }, "tooltip": { "show": true } },
      "targets": [
        { "refId": "A", "expr": "sum by (le) (rate(http_request_duration_seconds_bucket{method=~\"$method\", endpoint=~\"$endpoint\"}[$__rate_interval]))", "legendFormat": "{{le}}", "format": "heatmap" }
      ],
      "fieldConfig": { "defaults": { "unit": "ops" }, "overrides": [] }
    },
    {
      "type": "logs",
      "title": "Application Logs",
      "id": 7,
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 22 },
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "options": {
        "showLabels": true,
        "showTime": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{job=~\"$job\"}",
          "datasource": { "type": "loki", "uid": "${DS_LOKI}" }
        }
      ]
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["http", "prometheus", "loki", "logs", "latency", "rps"],
  "templating": {
    "list": [
      { "type": "datasource", "name": "DS_PROMETHEUS", "query": "prometheus", "label": "Prometheus", "refresh": 1 },
      { "type": "datasource", "name": "DS_LOKI", "query": "loki", "label": "Loki", "refresh": 1 },
      { "name": "method", "type": "query", "label": "Method", "hide": 0, "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }, "query": "label_values(http_requests_total, method)", "includeAll": true, "allValue": ".+", "multi": true, "refresh": 2, "sort": 1 },
      { "name": "endpoint", "type": "query", "label": "Endpoint", "hide": 0, "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" }, "query": "label_values(http_requests_total, endpoint)", "includeAll": true, "allValue": ".+", "multi": true, "refresh": 2, "sort": 1 },
      { "name": "job", "type": "query", "label": "Job", "hide": 0, "datasource": { "type": "loki", "uid": "${DS_LOKI}" }, "query": "label_values(job)", "includeAll": true, "allValue": ".+", "multi": true, "refresh": 2, "sort": 1 }
    ]
  },
  "time": { "from": "now-6h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "15s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d"]
  },
  "timezone": "browser",
  "title": "HTTP Service Overview (Metrics & Logs)",
  "version": 3,
  "weekStart": ""
}
